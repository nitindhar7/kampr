<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="ListItem">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
  </style>

  <!-- Global List Item Font Styles -->
  <style name="ListItem.Font">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/dark_gray</item>
  </style>

  <style name="ListItem.Font.Bold">
    <item name="android:textStyle">bold</item>
  </style>

  <!-- Global List Item Image Styles -->
  <style name="ListItem.Image">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <!-- Global List Item Stats Styles -->
  <style name="ListItem.Stats">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:shadowColor">@color/white</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">1</item>
    <item name="android:textColor">@color/post_item_counts</item>
    <item name="android:textSize">14sp</item>
  </style>

  <!-- Posts List Items -->
  <style name="ListItem.Post">
    <item name="android:background">@color/white</item>
    <item name="android:padding">8dp</item>
  </style>

  <style name="ListItem.PostThumbnail">
    <item name="android:layout_width">50dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:minHeight">50dp</item>
    <item name="android:minWidth">50dp</item>
  </style>

  <style name="ListItem.PostDetails">
    <item name="android:layout_marginLeft">10dp</item>
  </style>

  <!-- Counts Stats -->
  <style name="ListItem.Stats.Counts">
    <item name="android:layout_width">15dp</item>
    <item name="android:layout_height">15dp</item>
    <item name="android:layout_marginTop">3dp</item>
    <item name="android:minHeight">15dp</item>
    <item name="android:minWidth">15dp</item>
  </style>

</resources>