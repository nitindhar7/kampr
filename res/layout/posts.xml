<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:id="@+id/content" android:background="#FFF">
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:orientation="vertical"
			android:id="@+id/header" android:background="#FF9900">
			<TextView android:id="@+id/logo" android:layout_height="fill_parent"
				android:layout_width="fill_parent" android:textStyle="bold"
				android:gravity="left" android:minHeight="30dp" android:textSize="30sp"
				android:text="kampr" android:paddingLeft="10dp" android:textColor="#FFFFFF"></TextView>
		</LinearLayout>
		<TabWidget android:id="@android:id/tabs"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:minHeight="30px"/>
		<FrameLayout android:id="@android:id/tabcontent"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
		</FrameLayout>
	</LinearLayout>
</TabHost>