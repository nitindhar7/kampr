<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFF"
	android:id="@+id/link">
	<LinearLayout android:layout_height="wrap_content"
        android:layout_width="fill_parent" android:orientation="vertical"
        android:id="@+id/header" android:background="@drawable/action_bar">
        <TextView android:id="@+id/logo" android:layout_height="fill_parent"
            android:layout_width="fill_parent" android:textStyle="bold"
            android:gravity="left" android:minHeight="30dp" android:textSize="30sp"
            android:text="kampr" android:paddingLeft="10dp" android:textColor="#FFFFFF"
            android:shadowRadius="1" android:shadowDy="1" android:shadowDx="1"
            android:shadowColor="#995C00"></TextView>
    </LinearLayout>
	<TextView android:id="@+id/link_title" android:layout_height="wrap_content"
		android:text="title" android:minHeight="30dp" android:gravity="center_vertical"
		android:layout_width="fill_parent" android:paddingLeft="5dp"
		android:paddingRight="5dp" android:textStyle="bold" android:textSize="20sp"
		android:textColor="#FF9900"></TextView>
	<TextView android:id="@+id/link_url" android:layout_height="wrap_content"
		android:text="url" android:layout_width="fill_parent"
		android:minHeight="20dp" android:gravity="center_vertical"
		android:paddingLeft="5dp" android:paddingRight="5dp"
		android:textColor="#333333" android:textStyle="italic"></TextView>
	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/link_user"
		android:minHeight="30dp">
		<ImageView android:src="@drawable/ic_tab_links"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_alignParentLeft="true" android:id="@+id/link_user_icon"
			android:maxHeight="20dp" android:maxWidth="20dp" android:minHeight="20dp"
			android:minWidth="20dp"></ImageView>
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/link_user_name"
			android:text="name" android:layout_toRightOf="@+id/link_user_icon"
			android:minHeight="30dp" android:gravity="center_vertical"
			android:paddingLeft="5dp" android:paddingRight="5dp"
			android:textColor="#333333" android:textStyle="bold"></TextView>
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/link_date"
			android:layout_alignParentRight="true" android:text="date"
			android:gravity="center_vertical" android:minHeight="30dp"
			android:paddingLeft="5dp" android:paddingRight="5dp"
			android:textStyle="italic" android:textColor="#999999"></TextView>
	</RelativeLayout>
	<ScrollView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/link_description_scroll">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@+id/link_description_scroll_linear">
			<TextView android:scrollbarAlwaysDrawVerticalTrack="true"
				android:id="@+id/link_description" android:textColor="#333"
				android:padding="5dp" android:text="description"
				android:layout_height="wrap_content" android:layout_width="fill_parent"></TextView>
		</LinearLayout>
	</ScrollView>

</LinearLayout>
