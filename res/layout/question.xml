<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFF"
	android:id="@+id/question">
	<com.markupartist.android.widget.ActionBar
		android:id="@+id/actionbar" style="@style/ActionBar" />
	<TextView android:id="@+id/question_title"
		android:layout_height="wrap_content" android:minHeight="30dp"
		android:gravity="center_vertical" android:layout_width="fill_parent"
		android:textStyle="bold" android:textSize="20sp" android:textColor="#FF9900"
		android:padding="10dp"></TextView>
	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/question_user"
		android:minHeight="30dp" android:padding="10dp" android:background="#EEE">
		<ImageView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_alignParentLeft="true"
			android:id="@+id/question_user_icon" android:maxHeight="40dp"
			android:maxWidth="40dp" android:minHeight="40dp" android:minWidth="40dp"></ImageView>
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/question_user_name"
			android:layout_toRightOf="@+id/question_user_icon"
			android:paddingLeft="5dp" android:paddingRight="5dp"
			android:textColor="#333333" android:textStyle="bold"
			android:layout_marginLeft="10dp" android:gravity="center_vertical"
			android:minHeight="40dp"></TextView>
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/question_date"
			android:layout_alignParentRight="true" android:paddingLeft="5dp"
			android:paddingRight="5dp" android:textColor="#555" android:gravity="center_vertical"
			android:minHeight="40dp"></TextView>
	</RelativeLayout>
	<ScrollView android:layout_width="fill_parent"
		android:id="@+id/question_content_scroll" android:layout_height="fill_parent"
		android:isScrollContainer="true" android:padding="10dp">
		<TextView android:id="@+id/question_content"
			android:layout_height="wrap_content" android:textColor="#333"
			android:layout_width="fill_parent"
			android:scrollbarAlwaysDrawVerticalTrack="false"></TextView>
	</ScrollView>
</LinearLayout>