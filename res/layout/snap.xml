<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snap"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_bar"
        android:minHeight="50dp" >

        <TextView
            android:id="@+id/actionbar_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:shadowColor="#333"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Snap"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--
             <TextView
            android:id="@+id/actionbar_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_actionbar_settings_nouveau"
            android:minHeight="40dp"
            android:minWidth="40dp" />
        -->
    </RelativeLayout>

    <TextView
        android:id="@+id/snap_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar"
        android:gravity="center_vertical"
        android:minHeight="30dp"
        android:padding="10dp"
        android:textColor="@color/post_title"
        android:textSize="20sp"
        android:textStyle="bold" >
    </TextView>

    <RelativeLayout
        android:id="@+id/snap_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/snap_title"
        android:background="#EEE"
        android:minHeight="30dp"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/snap_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:minHeight="50dp"
            android:minWidth="50dp" >
        </ImageView>

        <RelativeLayout
            android:id="@+id/snap_user_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/snap_user_icon"
            android:minHeight="25dp">

            <TextView
                android:id="@+id/snap_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/snap_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#555" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/snap_nav"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/snap_user_top"
            android:layout_toRightOf="@id/snap_user_icon">

            <TextView
                android:id="@+id/post_likes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:textColor="@color/post_item_counts" android:textStyle="bold" android:paddingLeft="5dp" android:shadowColor="@color/white" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:textSize="12sp"/>

            <TextView
                android:id="@+id/post_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/post_likes_count"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:text="likes •"
                android:textColor="@color/post_item_counts" android:shadowColor="@color/white" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:textSize="12sp" android:paddingLeft="2dp"/>

            <TextView
                android:id="@+id/post_views_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/post_likes"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:textColor="@color/post_item_counts"
                android:textStyle="bold" android:paddingLeft="5dp" android:shadowColor="@color/white" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:textSize="12sp"/>

            <TextView
                android:id="@+id/post_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/post_views_count"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:text="views •"
                android:textColor="@color/post_item_counts" android:shadowColor="@color/white" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:textSize="12sp" android:paddingLeft="2dp"/>

            <TextView
                android:id="@+id/post_comments_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/post_views"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:textColor="@color/post_item_counts" android:paddingLeft="5dp" android:shadowColor="@color/white" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:textStyle="bold" android:textSize="12sp"/>

            <TextView
                android:id="@+id/post_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/post_comments_count"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:paddingRight="5dp"
                android:text="comments"
                android:textColor="@color/post_item_counts" android:shadowColor="@color/white" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:textSize="12sp" android:paddingLeft="2dp"/>

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/snap_description_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/snap_user"
        android:isScrollContainer="true"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/snap_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/snap_large_url"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/snap_image_bg" />

            <TextView
                android:id="@+id/snap_description"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:textColor="#333" >
            </TextView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>