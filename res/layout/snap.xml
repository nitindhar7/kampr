<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snap"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <com.markupartist.android.widget.ActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar" />

    <TextView
        android:id="@+id/snap_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="30dp"
        android:padding="10dp"
        android:textColor="#FF9900"
        android:textSize="20sp"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/snap_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_link_bg"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:shadowColor="#FFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="#333" >
    </TextView>

    <RelativeLayout
        android:id="@+id/snap_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:minHeight="30dp"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/snap_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:minHeight="40dp"
            android:minWidth="40dp" >
        </ImageView>

        <TextView
            android:id="@+id/snap_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/snap_user_icon"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#333333"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/snap_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#555" >
        </TextView>
    </RelativeLayout>
    
        <RelativeLayout
        android:id="@+id/snap_nav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snap_user"
        android:background="#F90" >

        <TextView
            android:id="@+id/snap_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="likes"
            android:textColor="#FFF" >
        </TextView>

        <TextView
            android:id="@+id/snap_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/snap_likes"
            android:gravity="center_vertical"
            android:minHeight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="views"
            android:textColor="#FFF" >
        </TextView>

        <TextView
            android:id="@+id/snap_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/snap_views"
            android:gravity="center_vertical"
            android:minHeight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="comments"
            android:textColor="#FFF" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/snap_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/snap_large_url"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/snap_image_bg" >
        </ImageView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/snap_description_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"
        android:padding="10dp" >

        <TextView
            android:id="@+id/snap_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:textColor="#333" >
        </TextView>
    </ScrollView>

</LinearLayout>