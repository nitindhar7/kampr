<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/post_item_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/post_item_sections"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_item_states"
        android:padding="8dp" >

        <LinearLayout
            android:id="@+id/post_item_graphics"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/post_item_user_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:maxHeight="40dp"
                android:maxWidth="40dp"
                android:minHeight="40dp"
                android:minWidth="40dp"
                android:src="@drawable/icon" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_item_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/post_item_graphics"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/post_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top" >

                <TextView
                    android:id="@+id/post_item_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="username"
                    android:textColor="#333"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/post_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="top"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="date"
                    android:textColor="@color/post_item_date" >
                </TextView>
            </RelativeLayout>

            <TextView
                android:id="@+id/post_item_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:textColor="#333" >
            </TextView>

            <RelativeLayout
                android:id="@+id/post_item_counts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/post_item_likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="20dp"
                    android:paddingLeft="5dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textColor="@color/post_item_counts"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/post_item_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/post_item_likes_count"
                    android:gravity="center_vertical"
                    android:minHeight="20dp"
                    android:paddingLeft="2dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="likes •"
                    android:textColor="@color/post_item_counts"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/post_item_views_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/post_item_likes"
                    android:gravity="center_vertical"
                    android:minHeight="20dp"
                    android:paddingLeft="5dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textColor="@color/post_item_counts"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/post_item_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/post_item_views_count"
                    android:gravity="center_vertical"
                    android:minHeight="20dp"
                    android:paddingLeft="2dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="views •"
                    android:textColor="@color/post_item_counts"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/post_item_comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/post_item_views"
                    android:gravity="center_vertical"
                    android:minHeight="20dp"
                    android:paddingLeft="5dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textColor="@color/post_item_counts"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/post_item_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/post_item_comments_count"
                    android:gravity="center_vertical"
                    android:minHeight="20dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="5dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="comments"
                    android:textColor="@color/post_item_counts"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>