<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/post_item_sections"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_item_states"
        android:padding="8dp" >

        <LinearLayout
            android:id="@+id/post_item_graphics"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:minHeight="60dp"
            android:minWidth="60dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/post_item_user_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/user_icon_bg"
                android:maxHeight="60dp"
                android:maxWidth="60dp"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:src="@drawable/icon" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_item_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/post_item_graphics"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/post_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top" >

                <TextView
                    android:id="@+id/post_item_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="username"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/post_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="top"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="date"
                    android:textColor="@color/post_item_date"
                    android:textSize="18sp" >
                </TextView>
            </RelativeLayout>

            <TextView
                android:id="@+id/post_item_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:textColor="@color/post_title"
                android:textSize="20sp"
                android:textStyle="bold" >
            </TextView>

            <RelativeLayout
                android:id="@+id/post_item_counts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <!-- views counter -->

                <TextView
                    android:id="@+id/post_item_views"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ic_post_views"
                    android:gravity="center_vertical"
                    android:minHeight="18dp"
                    android:minWidth="18dp" />

                <TextView
                    android:id="@+id/post_item_views_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/post_item_views"
                    android:gravity="center_vertical"
                    android:minHeight="16dp"
                    android:paddingLeft="3dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textColor="@color/post_item_counts"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- likes counter -->

                <TextView
                    android:id="@+id/post_item_likes"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/post_item_views_count"
                    android:background="@drawable/ic_post_likes"
                    android:gravity="center_vertical"
                    android:minHeight="12dp"
                    android:minWidth="12dp" />

                <TextView
                    android:id="@+id/post_item_likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/post_item_likes"
                    android:gravity="center_vertical"
                    android:minHeight="16dp"
                    android:paddingLeft="3dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textColor="@color/post_item_counts"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- comments counter -->

                <TextView
                    android:id="@+id/post_item_comments"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@id/post_item_likes_count"
                    android:background="@drawable/ic_post_comments"
                    android:gravity="center_vertical"
                    android:minHeight="16dp"
                    android:minWidth="16dp" />

                <TextView
                    android:id="@+id/post_item_comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/post_item_comments"
                    android:gravity="center_vertical"
                    android:minHeight="16dp"
                    android:paddingLeft="3dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textColor="@color/post_item_counts"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>