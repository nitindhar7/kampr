<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/post_item_background"
    android:orientation="vertical" >
    <!-- android:background="@drawable/post_item_bg" -->

    <RelativeLayout
        android:id="@+id/post_item_sections"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_item_states"
        android:padding="8dp" >

        <LinearLayout
            android:id="@+id/post_item_graphics"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:minHeight="60dp"
            android:minWidth="60dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/post_item_user_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:maxHeight="60dp"
                android:maxWidth="60dp"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:src="@drawable/icon"
                android:background="@drawable/user_icon_bg" >
            </ImageView>
        </LinearLayout>
        
        <!-- post arrow -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:minWidth="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="61dp"
            android:orientation="vertical" >
	        <ImageView
		        android:layout_width="20dp"
		        android:layout_height="20dp"
		        android:maxHeight="20dp"
		        android:maxWidth="20dp"
		        android:minHeight="20dp"
		        android:minWidth="20dp"
		        android:src="@drawable/ic_post_content_arrow" >
		    </ImageView>
		</LinearLayout>
            
		<!-- post content -->
        <LinearLayout
            android:id="@+id/post_item_details"
            android:background="@drawable/post_content_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/post_item_graphics"
            android:padding="8dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/post_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top" >

                <TextView
                    android:id="@+id/post_item_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="username"
                    android:textStyle="bold"
                    android:textColor="#333" >
                </TextView>

                <TextView
                    android:id="@+id/post_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="top"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="date"
                    android:textColor="@color/post_item_date" >
                </TextView>
            </RelativeLayout>
            
            <View
                android:id="@+id/post_item_divider"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray" />
            
            <TextView
                android:id="@+id/post_item_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:textColor="@color/post_title"
                android:textStyle="bold"
                android:textSize="18sp" >
            </TextView>   

            <RelativeLayout
                android:id="@+id/post_item_counts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

				<!-- views counter -->
				<TextView
                    android:id="@+id/post_item_views"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:gravity="center_vertical"
                    android:minWidth="18dp"
                    android:minHeight="18dp"
                    android:background="@drawable/ic_post_views" />
                    
                <TextView
                    android:id="@+id/post_item_views_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/post_item_views"
                    android:minHeight="16dp"
                    android:paddingLeft="3dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textColor="@color/post_item_counts"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                    
                <!-- likes counter -->
				<TextView
                    android:id="@+id/post_item_likes"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/post_item_views_count"
                    android:minWidth="12dp"
                    android:minHeight="12dp"
                    android:background="@drawable/ic_post_likes"
					android:layout_marginTop="3dp"/>
					
                <TextView
                    android:id="@+id/post_item_likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/post_item_likes"
                    android:minHeight="16dp"
                    android:paddingLeft="3dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textColor="@color/post_item_counts"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                
                <!-- comments counter -->
                <TextView
                    android:id="@+id/post_item_comments"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/post_item_likes_count"
                    android:minWidth="16dp"
                    android:minHeight="16dp"
                    android:background="@drawable/ic_post_comments" 
                    android:layout_marginTop="1dp"/>
                    
                <TextView
                    android:id="@+id/post_item_comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/post_item_comments"
                    android:gravity="center_vertical"
                    android:minHeight="16dp"
                    android:paddingLeft="5dp"
                    android:shadowColor="@color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textColor="@color/post_item_counts"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>