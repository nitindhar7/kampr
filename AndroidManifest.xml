<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.nitindhar.kampr"
  android:versionCode="9"
  android:versionName="2.1.0" >

  <uses-sdk
    android:maxSdkVersion="15"
    android:minSdkVersion="7"
    android:targetSdkVersion="15" />

  <application
    android:icon="@drawable/icon"
    android:label="Kampr"
    android:theme="@style/Kampr" >
    <activity
      android:name=".activity.KamprActivity"
      android:label="Kampr"
      android:theme="@android:style/Theme.NoTitleBar"
      android:windowSoftInputMode="stateVisible|adjustResize|adjustPan" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".activity.PostsActivity"
      android:configChanges="keyboardHidden|orientation"
      android:theme="@style/KamprActionBar" >
    </activity>
    <activity
      android:name=".activity.UserActivity"
      android:configChanges="keyboardHidden|orientation"
      android:theme="@style/KamprActionBar" >
    </activity>
    <activity
      android:name=".activity.PostActivity"
      android:configChanges="keyboardHidden|orientation"
      android:theme="@style/KamprActionBar" >
    </activity>
    <activity
      android:name=".activity.SnapFullscreenActivity"
      android:configChanges="keyboardHidden|orientation" >
    </activity>
    <activity
      android:name=".activity.CommentsActivity"
      android:configChanges="keyboardHidden|orientation" >
    </activity>
  </application>

  <uses-permission android:name="android.permission.INTERNET" >
  </uses-permission>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
  </uses-permission>

</manifest>